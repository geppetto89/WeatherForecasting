<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.mobile.micmen.nicedayforecasting">

    <uses-permission android:name="android.hardware.location.gps" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <application
        android:name=".core.ForecastApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".features.forecast.MainActivity"
            android:launchMode="singleTop"
            >
        </activity>
        <activity
            android:name=".features.preference.WeatherPreferenceActivity"
            android:launchMode="singleTop"
            >
        </activity>
        <activity android:name=".features.SplashScreenActivity">
            <intent-filter>
               <action android:name="android.intent.action.MAIN" />

               <category android:name="android.intent.category.LAUNCHER" />
           </intent-filter>
        </activity>

    </application>

</manifest>