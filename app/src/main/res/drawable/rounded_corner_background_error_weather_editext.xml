<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white_2"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
    <item
        android:left="-3dp"
        android:top="-3dp"
        android:right="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/red" />
        </shape>
    </item>
</layer-list>